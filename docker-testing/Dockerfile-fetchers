FROM netmeld-test-base

ENV NETMELD_DB netmeld_test_export

USER root

WORKDIR /home/netmeld/setup

RUN apt install --quiet --quiet --assume-yes --option Dpkg::Use-Pty=0 \
      --no-install-recommends --no-install-suggests \
      ./netmeld-*core.deb ./netmeld-*fetchers.deb ./netmeld-*tool-clw.deb

WORKDIR /home/netmeld

RUN rm -rf ./setup

USER netmeld